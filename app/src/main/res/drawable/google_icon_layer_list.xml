<?xml version="1.0" encoding="utf-8"?>
<!-- Layer-list for Google Button -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background and size API < 23 -->
    <item>
        <shape android:shape="oval"
            android:width="@dimen/google_icon_width"
            android:height="@dimen/google_icon_height">
            <solid android:color="@color/icon_background_color" />
        </shape>
    </item>
    <!-- Google Button -->
    <item
        android:drawable="@drawable/google_icon"
        android:top="0dp"
        android:bottom="0dp"
        android:right="0dp"
        android:left="0dp"/>
</layer-list>