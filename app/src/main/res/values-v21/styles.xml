<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Login.ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:paddingEnd">70dp</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <style name="AppTheme.DetailList.ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="colorButtonNormal">@color/text_button</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>

    </style>
    <!-- Rating Bar style -->
    <style name="AppTheme.RatingBar.RatingBarStyle" parent="android:style/Widget.Material.RatingBar">
        <item name="android:colorAccent">@color/text_button</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>