<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Connexion application theme. -->
    <style name="ConnexionTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/grey</item>
    </style>

    <!-- Text connexion title -->
    <style name="TitleConnection" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/verdanab</item>
    </style>

    <!-- Text connexion title -->
    <style name="SubTitleConnection" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Generic Button style -->
    <style name="AppTheme.Generic.ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/generic_button_rounded_shape</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <!-- Facebook Button style -->
    <style name="AppTheme.Facebook.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/facebook_button_rounded_shape</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">35dp</item>
        <item name="android:paddingEnd">60dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <!-- Google Button style -->
    <style name="AppTheme.Google.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/google_button_rounded_shape</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">25dp</item>
        <item name="android:paddingEnd">75dp</item>
        <item name="android:paddingStart">20dp</item>
    </style>

</resources>
