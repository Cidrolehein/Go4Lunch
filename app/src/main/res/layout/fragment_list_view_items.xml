<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:text="@string/place_title"
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/grey_dark"
                android:text="@string/address"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|fill"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="@color/grey_dark"
                android:textSize="12sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="61dp"
                android:layout_height="70dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/distance"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/grey_light"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:src="@drawable/ic_perm_identity_black_24dp"
                        android:contentDescription="@string/icon" />

                    <TextView
                        android:id="@+id/people_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/people_number"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star_rating_3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:contentDescription="@string/star_rating_2"
                        android:gravity="end"
                        android:layout_gravity="bottom"
                        android:src="@drawable/ic_star_yellow_24dp" />

                    <ImageView
                        android:id="@+id/star_rating_2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:contentDescription="@string/star_rating_3"
                        android:gravity="end"
                        android:layout_gravity="bottom"
                        android:src="@drawable/ic_star_yellow_24dp" />

                    <ImageView
                        android:id="@+id/star_rating_1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="bottom"
                        android:contentDescription="@string/star_rating_4"
                        android:src="@drawable/ic_star_yellow_24dp" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/place_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:contentDescription="@string/place_image"
                android:scaleType="centerCrop"
                android:src="@drawable/go4lunch_connexion_background" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>